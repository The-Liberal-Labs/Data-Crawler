# Data-Crawler Environment Configuration
# Single Machine Deployment
# Copy to .env and fill in your values

# ===========================================
# GEMINI API (REQUIRED)
# ===========================================
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-lite
EMBEDDING_MODEL=gemini-embedding-001

# ===========================================
# NEO4J (Running on Host)
# ===========================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

# ===========================================
# MILVUS LITE (Local Embedded Database)
# ===========================================
MILVUS_DB_PATH=./data/milvus.db

# ===========================================
# SERVICE URLS (All localhost)
# ===========================================
LLM_SERVICE_URL=http://localhost:8001
EMBEDDING_SERVICE_URL=http://localhost:8002
KNOWLEDGE_GRAPH_SERVICE_URL=http://localhost:8003
DOCLING_SERVICE_URL=http://localhost:8004

# ===========================================
# GPU SETTINGS
# ===========================================
CUDA_VISIBLE_DEVICES=0
GPU_MEMORY_FRACTION=0.85

# ===========================================
# SECURITY
# ===========================================
SECRET_KEY=change-me-to-a-random-string
